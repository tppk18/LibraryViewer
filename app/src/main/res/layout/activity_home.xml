<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9d9d9"
    android:padding="16dp">

    <!-- Верхняя панель -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/cardNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="#D9D9D9"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/logoView"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_below="@id/topBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />
    
    <com.google.android.material.button.MaterialButton
        android:id="@+id/booksButton"
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoView"
        android:layout_marginTop="32dp"
        android:text="ВЫДАННАЯ ЛИТЕРАТУРА"
        android:textColor="#D9D9D9"
        app:cornerRadius="12dp"
        app:backgroundTint="#00a0e3"
    />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/barcodeButton"
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/booksButton"
        android:layout_marginTop="16dp"
        android:text="ЧИТАТЕЛЬСКИЙ БИЛЕТ"
        android:textColor="#D9D9D9"
        app:cornerRadius="12dp"
        app:backgroundTint="#96C22B"
    />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/aboutButton"
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/barcodeButton"
        android:layout_marginTop="16dp"
        android:text="О БИБЛИОТЕКЕ"
        android:textColor="#D9D9D9"
        app:cornerRadius="12dp"
        app:backgroundTint="#6A2F85"
    />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logoutButton"
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutButton"
        android:layout_marginTop="40dp"
        android:text="ВЫЙТИ"
        android:textColor="#464646"
        app:backgroundTint="#00000000"
    />

</RelativeLayout>
