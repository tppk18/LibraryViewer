<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d9d9d9"
	android:gravity="center_horizontal"
    android:padding="16dp">
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:textAlignment="center"
        android:text="КАК СТАТЬ ЧИТАТЕЛЕМ НАУЧНО-ТЕХНИЧЕСКОЙ БИБЛИОТЕКИ СГУГиТ"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#e95229"
		android:layout_marginTop="32dp"/>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="16dp"
		android:gravity="top">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="16dp"
			android:gravity="top">

			<View
				android:layout_width="8dp"
				android:layout_height="8dp"
				android:layout_marginTop="12dp"
				android:layout_marginEnd="8dp"
				android:background="@drawable/bullet_circle" />

			<TextView
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="ПРИХОДИ В ЧИТАЛЬНЫЙ ЗАЛ БИБЛИОТЕКИ"
				android:textColor="#464646"
				android:textSize="20sp" />
		</LinearLayout>
		
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="ГЛАВНЫЙ КОРПУС\nАУДИТОРИЯ 113"
			android:textSize="18sp"
			android:textColor="#6a2f85"
			android:layout_marginTop="8dp"
			android:layout_marginLeft="16dp"/>
		
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="ВОЗЬМИ С СОБОЙ"
			android:textSize="18sp"
			android:textColor="#e95229"
			android:layout_marginTop="8dp"
			android:layout_marginLeft="16dp"/>
			
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginTop="8dp"
			android:layout_marginLeft="16dp"
			android:gravity="top">
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginBottom="6dp">

				<ImageView
					android:layout_width="8dp"
					android:layout_height="8dp"
					android:layout_marginTop="6dp"
					android:layout_marginEnd="8dp"
					android:scaleType="fitCenter"
					android:src="@drawable/triangle_right" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="СЛУЖЕБНОЕ УДОСТОВЕРЕНИЕ"
					android:textColor="#464646"
					android:textSize="16sp" />
			</LinearLayout>
			
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="для преподавателей и сотрудников"
					android:textColor="#6a2f85"
					android:layout_marginLeft="16dp"
					android:textSize="16sp" />
					
					
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginBottom="6dp">

				<ImageView
					android:layout_width="8dp"
					android:layout_height="8dp"
					android:layout_marginTop="6dp"
					android:layout_marginEnd="8dp"
					android:scaleType="fitCenter"
					android:src="@drawable/triangle_right" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="ПРИКАЗ ДИРЕКТОРА ЦДОИМК"
					android:textColor="#464646"
					android:textSize="16sp" />
			</LinearLayout>
			
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="для слушателей ЦДОиМК"
					android:textColor="#6a2f85"
					android:layout_marginLeft="16dp"
					android:textSize="16sp" />
					
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginBottom="6dp">

				<ImageView
					android:layout_width="8dp"
					android:layout_height="8dp"
					android:layout_marginTop="6dp"
					android:layout_marginEnd="8dp"
					android:scaleType="fitCenter"
					android:src="@drawable/triangle_right" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="ПАСПОРТ"
					android:textColor="#464646"
					android:textSize="16sp" />
			</LinearLayout>
			
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="для желающих пользоваться электронной библиотекой"
					android:textColor="#6a2f85"
					android:layout_marginLeft="16dp"
					android:textSize="16sp" />
			
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="16dp"
			android:gravity="top">

			<View
				android:layout_width="8dp"
				android:layout_height="8dp"
				android:layout_marginTop="12dp"
				android:layout_marginEnd="8dp"
				android:background="@drawable/bullet_circle" />

			<TextView
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="СООБЩИ СВОИ АНКЕТНЫЕ ДАННЫЕ"
				android:textColor="#464646"
				android:textSize="20sp" />
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="16dp"
			android:gravity="top">

			<View
				android:layout_width="8dp"
				android:layout_height="8dp"
				android:layout_marginTop="12dp"
				android:layout_marginEnd="8dp"
				android:background="@drawable/bullet_circle" />

			<TextView
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="ПОЛУЧИ ДАННЫЕ ДЛЯ ВХОДА В ПРИЛОЖЕНИЕ"
				android:textColor="#464646"
				android:textSize="20sp" />
		</LinearLayout>

			
	</LinearLayout>





</LinearLayout>
